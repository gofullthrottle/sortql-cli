{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "lib": ["ES6"],
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@sortql/*": ["src/*"]
    }
  }
}
